<h1><%= @place["name"] %></h1>

<% if session["user_id"]!= nil  %>

  <div class="row">

    <h2>My Entries</h2>
    <% for entry in @entries %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="grid gap-3">
          <h3><%= entry["title"] %></h3>
          <h4 class="ms-2 mt-2"><%= entry["occurred_on"] %></h4>
          <p class="ms-3 mt-3"><%= entry["description"] %></p>
        </div>
      </div>
    <% end %>

    <p>
      <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
    </p>

    <p>
      <a href="/places" class="btn btn-primary">  Back to All Places </a>
    </p>
  </div>  
<% else %>
  You must first <a href="/login" class = "btn btn-info">login</a> to see entries.
<% end %>